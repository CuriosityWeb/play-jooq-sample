<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.17.0.xsd">
  <generator>
    <name>org.jooq.codegen.ScalaGenerator</name>

    <database>
      <name>org.jooq.meta.extensions.ddl.DDLDatabase</name>

      <properties>
        <property>
          <key>scripts</key>
          <value>conf/db/**/*.sql</value>
        </property>

        <property>
          <key>sort</key>
          <value>flyway</value>
        </property>

        <property>
          <key>unqualifiedSchema</key>
          <value>none</value>
        </property>

        <property>
          <key>defaultNameCase</key>
          <value>upper</value>
        </property>
      </properties>
    </database>

    <target>
      <packageName>repo.jooq</packageName>
    </target>
  </generator>
</configuration>
